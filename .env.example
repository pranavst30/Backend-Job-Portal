
# JOB PORTAL BACKEND - Environment Variables

# 
# INSTRUCTIONS:
# 1. Copy this file and rename it to '.env'
# 2. Fill in all the values below
# 3. Never commit .env to version control
#

# SERVER CONFIGURATION


# Port number for the server (default: 8080)
PORT=8080

# Development mode: 'development' or 'production'
DEV_MODE=development


# DATABASE CONFIGURATION


# MongoDB connection string
# Format: mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>?retryWrites=true&w=majority
# Example: mongodb+srv://user:pass123@cluster0.mongodb.net/jobportal
MONGO_URL=your_mongodb_connection_string_here


# SECURITY & AUTHENTICATION


# JWT Secret Key - CHANGE THIS TO A STRONG RANDOM STRING IN PRODUCTION
# You can generate a secure key using: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_KEY=your_super_secret_jwt_key_here


# OPTIONAL CONFIGURATIONS


# Add any additional environment variables below
# FRONTEND_URL=http://localhost:3000
# ADMIN_EMAIL=admin@example.com
